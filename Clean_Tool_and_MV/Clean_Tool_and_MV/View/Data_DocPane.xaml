            <!--<TabItem Header="Products" Style="{DynamicResource LastTabItemStyle}">
                <Grid Margin="0,5,0,0" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
